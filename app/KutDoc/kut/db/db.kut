/// Data base initializer.

import "dm/cgi";
import "db/confTb";
import "db/pathsTb";

/// Initializes data base.
/// \->{}
init = \ -> {
  p = path.cat([cgi.Home[0], "data"]);
  if (!file.exists(p)) {
    file.mkdir(p);
  }

  confTb.init(p);
  pathsTb.init(p);
};
