/// Signal to stop the application.
module data.stopper;

(
  var stop = false;

{
  /// Returns true if the application was stopped.
  ///
  /// Arguments:
  ///   () - None.
  stop? ()
  is () -> boolean =
    stop,

  /// Stops the program.
  ///
  /// Arguments:
  ///   () - None.
  doStop ()
  is () -> () =
    stop := true,
})
